{
    "name": "notification",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "scope": {
        "include": [
            "course",
            "session",
            "notificationType",
            "youtuber",
            "podcast",
            "onlineSession"
        ]
    },
    "properties": {
        "studentId": {
            "type": "number",
            "required": false
        },
        "teacherId": {
            "type": "number",
            "required": false
        },
        "ownerId": {
            "type": "number",
            "required": true
        },
        "typeId": {
            "type": "number",
            "required": true
        },
        "sessionId": {
            "type": "number",
            "required": false
        },
        "courseId": {
            "type": "number",
            "required": false
        },
        "youtuberId": {
            "type": "number",
            "required": false
        },
        "podcastId": {
            "type": "number",
            "required": false
        },
        "onlineSessionId": {
            "type": "number",
            "required": false
        },
        "isSeen": {
            "type": "boolean",
            "required": true,
            "default": false
        },
        "isRead": {
            "type": "boolean",
            "required": true,
            "default": false
        },
        "createdAt": {
            "type": "date",
            "required": true,
            "defaultFn": "now"
        }
    },
    "validations": [],
    "relations": {
        "session": {
            "type": "belongsTo",
            "model": "session",
            "foreignKey": "sessionId",
            "options": {
                "nestRemoting": true
            }
        },
        "course": {
            "type": "belongsTo",
            "model": "course",
            "foreignKey": "courseId",
            "options": {
                "nestRemoting": true
            }
        },
        "youtuber": {
            "type": "belongsTo",
            "model": "youtuber",
            "foreignKey": "youtuberId",
            "options": {
                "nestRemoting": true
            }
        },
        "podcast": {
            "type": "belongsTo",
            "model": "podcast",
            "foreignKey": "podcastId",
            "options": {
                "nestRemoting": true
            }
        },
        "onlineSession": {
            "type": "belongsTo",
            "model": "onlineSession",
            "foreignKey": "onlineSessionId",
            "options": {
                "nestRemoting": true
            }
        },
        "notificationType": {
            "type": "belongsTo",
            "model": "notificationType",
            "foreignKey": "typeId",
            "options": {
                "nestRemoting": true
            }
        }
    },
    "acls": [{
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "super-admin",
            "permission": "ALLOW"
        },
        {
            "accessType": "EXECUTE",
            "principalType": "ROLE",
            "principalId": "$authenticated",
            "permission": "ALLOW",
            "property": "readNotification"
        }
    ],
    "methods": {
        "readNotification": {
            "accepts": [{
                    "arg": "id",
                    "type": "number",
                    "required": true,
                    "http": {
                        "source": "path"
                    }
                },
                {
                    "arg": "context",
                    "type": "object",
                    "http": {
                        "source": "context"
                    }
                }
            ],
            "returns": [{
                "arg": "result",
                "type": "object",
                "root": true,
                "description": ""
            }],
            "description": "old notification",
            "http": [{
                "path": "/:id/readNotification",
                "verb": "put"
            }]
        }
    }
}