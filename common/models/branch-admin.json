{
  "name": "branchAdmin",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [{
      "relation": "userInstitute"
    }]
  },
  "properties": {
    "userInstituteId": {
      "type": "number",
      "required": true
    },
    "branchId": {
      "type": "number",
      "required": true
    },
    "createdAt": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "userInstitute": {
      "type": "belongsTo",
      "model": "userInstitute",
      "foreignKey": "userInstituteId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [{
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "super-admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "changePassword": {
      "accepts": [{
          "arg": "id",
          "type": "number",
          "required": true,
          "description": "",
          "http": {
            "source": "path"
          }
        },
        {
          "arg": "newPassword",
          "type": "string",
          "required": true,
          "description": ""
        }
      ],
      "returns": [{
        "arg": "user",
        "type": "object",
        "root": true,
        "description": ""
      }],
      "description": "",
      "http": [{
        "path": "/:id/changePassword",
        "verb": "put"
      }]
    }
  }
}
